<Window x:Class="RitoConnector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Riot Connector" Height="350" Width="538" Visibility="Visible" BorderThickness="2" Background="#FF3F3F46" AllowsTransparency="True" WindowStyle="None" BorderBrush="Black">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="330" VerticalAlignment="Top" Width="505" Background="{x:Null}" BorderBrush="{x:Null}" Margin="10,10,0,0">
            <TabItem Header="Settings">
                <Grid Background="#FF3F3F46">
                    <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="427"/>
                    <ComboBox HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top" Width="103" SelectionChanged="ComboBox_SelectionChanged"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="107,28,0,0" TextWrapping="Wrap" Text="Custom Riot Games API Key [ Leave Empty if none ]" VerticalAlignment="Top" Width="320" TextChanged="TextBox_TextChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Profile">
                <Grid/>
            </TabItem>
            <TabItem Header="Match History">
                <Grid/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
